{
    "collectCoverage": true,
    "collectCoverageFrom": [
        "src/**/*.(t|j)s"
    ],
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": "./",
    "testMatch": [
        "**/test/**/*.(spec|test).(t|j)s"
    ],
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "coveragePathIgnorePatterns": [
        "src/config/*",
        "src/types/*",
        "src/models/*",
        "src/mappers/map/*",
        "src/shared/utils/http-errors.ts"
    ],
    "coverageReporters": [
        "clover",
        "json",
        "lcov",
        "text",
        "text-summary"
    ],
    "testTimeout": 60000,
    "coverageDirectory": "../coverage"
}